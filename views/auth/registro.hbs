

<div class="login">
<div id="login">
  
        <h3 class="text-center text-white pt-5">Registrarse</h3>
        <div class="container">
            <div id="login-row" class="row justify-content-center align-items-center">
           
                <div id="login-column" class="col-md-6">
                    <div id="login-box" class="col-md-12">
                        <form id="login-form" class="form" action="/registro" method="post">
                          
                            <h3 class="text-center text-primary"></h3>
                            <div class="form-group">
                              <label for="username" class="text-primary">Usuario:</label><br>
                              <input type="text" name="correo" placeholder="Nombre de usuario" class="form-control">
                                
                       
                            </div>
                            <div class="form-group">
                              <label for="email" class="text-primary">Correo:</label><br>
                              <input type="email" name="correo" placeholder="Correo electrónico" class="form-control">
                                
                       
                            </div>
                            <div class="form-group">
                                <label for="password" class="text-primary">Contraseña:</label><br>
                                <input type="password" name="password" placeholder="Contraseña" class="form-control"/>
                                
                            </div>
                          <div class="form-group">
                               
                                <input type="submit" name="Ingresar" class="btn btn-primary btn-md" value="Ingresar">
                            </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
    
    {{#if msj}}
      <p class="error">{{msj}}</p>
    {{/if}}